    "def count_hi(str):\n",
    "  count = 0\n",
    "  for i in range(0, len(str)-1): # loop over range to find position \n",
    "    if str[i:i+2] == 'hi': # i + 1 is not inclusive \n",
    "      count += 1\n",
    "  return count"
   ]
  },
